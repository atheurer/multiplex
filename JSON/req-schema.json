{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/perftool-incubator/multiplex/master/req-schema.json",

    "type": "object",
    "properties": {
        "presets": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z0-9_-]*$": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "$ref": "#/definitions/mv_param"
                    }
                }
            },
            "additionalProperties": false
        },
        "validations": {
            "type": "object",
            "patternProperties": {
                "[A-Za-z0-9_-]*$": {
                    "$ref": "#/definitions/validation_obj"
                }
            },
            "additionalProperties": false
        },
        "units": {
            "type": "object",
            "patternProperties": {
                "[A-Za-z0-9_-]*$": {
                    "$ref": "#/definitions/unit_obj"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [ "validations" ],
    "additionalProperties": false,
    "definitions": {
        "mv_param": {
            "type": "object",
            "properties": {
                "arg": {
                    "type": "string",
                    "minLength": 1
                },
                "vals": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "role": {
                    "type": "string",
                    "enum": ["client", "server", "all"]
                },
                "id": {
                    "type": "string",
                    "pattern": "^[1-9][0-9]*$"
                },
                "enabled": {
                    "type": "string",
                    "enum": ["yes", "no"]
                }
            },
            "required": [
                "arg",
                "vals"
            ],
            "additionalProperties": false
        },
        "validation_obj": {
            "type": "object",
            "properties": {
                "args": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "vals": {
                    "type": "string",
                    "minLength": 1
                },
                "description": {
                    "type": "string",
                    "minLength": 1
                },
                "convert": {
                    "type": "string",
                    "minLength": 1
                },
                "transform": {
                    "type": "object",
                    "properties": {
                        "search": {
                            "type": "string"
                        },
                         "replace": {
                            "type": "string"
                        }
                    },
                    "required": [ "search", "replace" ],
                    "additionalProperties": false
                }
            },
            "required": [
                "args",
                "vals"
            ],
            "additionalProperties": false
        },
        "unit_obj": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "[A-Za-z0-9_-]*$": {
                    "type": "object",
                    "minProperties": 1,
                    "patternProperties": {
                        "[A-Za-z0-9_-]*$": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    }
}
